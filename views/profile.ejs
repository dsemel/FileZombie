<form method="post" action="/display_list/"
      onsubmit="displayMessage()">

    <label for="addLists">Select a List:</label>
    <select id="bookLists" name="list" required>
        <option selected="selected">Please select ...</option>
        <option value="read" >read</option>
        <option value="currently reading">currently reading</option>
        <option value="want to read">want to read</option>

    </select>

    <input type="submit" name="submit">

</form>
<form method="post" action="/display_list/" target="hiddenFrame">
    <label for="addLists">Additional Lists:</label>
    <select id="addLists" name="moreList" required>
        <option selected disabled>More...</option>
        <% addList.slice(3, addList.length).forEach(function(b) { %>
            <option value="<%= b.list_name %>"><%= b.list_name %></option>
        <% }) %>
    </select>
    <input type="submit" name="submit" value="Submit">
</form>


